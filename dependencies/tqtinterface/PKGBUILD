# Maintainer: Baho Utot <baho-utot@columbus.rr.com>
pkgname=tqtinterface
pkgver=3.5.13
pkgrel=00
arch=(i686 x86_64)
url="http://trinity.pearsoncomputing.net"
license=(GPL2)
groups=(trinity)
pkgdesc="Trinity - ${pkgname}"
depends=(qt3)
makedepends=(cmake)
options=()
source=($pkgname-$pkgver.tar.xz)

mksource() {
	git clone http://scm.trinitydesktop.org/scm/git/${pkgname}
	pushd ${pkgname}
		git submodule init
		git submodule update
		git checkout v3.5.13
	popd
	tar -cvJf ${pkgname}-${pkgver}.tar.xz ${pkgname}/*
	rm -fr ${pkgname}
}

build() {
	msg "Building revision $pkgver"
	mkdir -vp ${srcdir}/BUILD
	cd ${srcdir}/BUILD
	msg "Starting cmake..."
#	cmake ${srcdir}/dependencies/${pkgname}/ \
	cmake ${srcdir}/${pkgname}/ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DQT_INCLUDE_DIR=/usr/include/qt \
		-DQT_VERSION=3 \
		-DBUILD_ALL=ON
	make
}
#		-DQT_INCLUDE_DIR=${_prefix}/include/qt \

package() {
	msg "Packaging - $pkgname-$pkgver"
	cd ${srcdir}/BUILD
	make DESTDIR="$pkgdir/" install
}
