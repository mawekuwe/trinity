# Maintainer: Baho Utot <baho-utot@columbus.rr.com>
pkgname=kdegames
pkgver=3.5.13
pkgrel=00
arch=('i686' 'x86_64')
url="http://trinity.pearsoncomputing.net"
license=('GPL2')
groups=('trinity')
pkgdesc="Trinity - ${pkgname}"
depends=(kdelibs desktop-file-utils)
makedepends=()
optdepends=()
options=(!makeflags)
install=install
source=($pkgname-$pkgver.tar.gz)

mksource() {
	git clone http://scm.trinitydesktop.org/scm/git/${pkgname}
	pushd ${pkgname}
		git submodule init
		git submodule update
		git checkout v3.5.13
	popd
	tar -cvJf ${pkgname}-${pkgver}.tar.xz ${pkgname}/*
	rm -fr ${pkgname}
}

build() {
	cd ${srcdir}/${pkgname}
	cp -f "/usr/share/aclocal/libtool.m4" "admin/libtool.m4.in"
	cp -f "/usr/share/libtool/config/ltmain.sh" "admin/ltmain.sh"
	make -f "Makefile.cvs"
	./configure prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--mandir=/usr/share/man \
		--docdir=/usr/share/doc/kde \
		--disable-dependency-tracking \
		--enable-closure \
		--disable-rpath
	make
}

package() {
	msg "Packaging - $pkgname-$pkgver"
	cd ${srcdir}/${pkgname}
	install -dm 755 ${pkgdir}/usr/share
	make DESTDIR="$pkgdir/" install
	rm -rf ${pkgdir}/usr/share/doc
}