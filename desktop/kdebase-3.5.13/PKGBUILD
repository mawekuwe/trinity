# Maintainer: Baho Utot <baho-utot@columbus.rr.com>
pkgname=kdebase
pkgver=3.5.13
pkgrel=00
arch=('i686' 'x86_64')
url="http://trinity.pearsoncomputing.net"
license=('GPL2')
groups=('trinity')
pkgdesc="Trinity - ${pkgname}"
depends=(libxtst libxkbfile desktop-file-utils kdelibs libxext 
	dbus-tqt hicolor-icon-theme libxcomposite libxt xorg-bdftopcf)
makedepends=(cmake imake)
optdepends=('pciutils: PCI bus configuration space access library and tools'
	'desktop-file-utils: Command line utilities for working with desktop entries'
	'xscreensaver: Screen saver and locker for the X Window System')
options=()
install='kdebase.install'
source=(Xsession kdmrc kdm-crypt.patch $_pkgname-$pkgver.tar.gz)
_trinity.desktop () {
	# create/install desktop
	install -d -m755 ${pkgdir}/etc/X11/sessions
	echo '[Desktop Entry]' > ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo 'Encoding=UTF-8' >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo 'Type=XSession' >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo "Exec=/usr/bin/startkde" >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo "TryExec=/usr/bin/startkde" >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo 'Name=Trinity' >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	echo 'Comment=The Trinity Desktop Environment. A powerful Open Source graphical desktop environment' >> ${pkgdir}/etc/X11/sessions/trinity.desktop
	chmod 0755 ${pkgdir}/etc/X11/sessions/trinity.desktop
}
build() {
	cd ${srcdir}/${pkgname}
	patch -Np0 -i ${srcdir}/kdm-crypt.patch
	mkdir -vp ${srcdir}/BUILD
	cd ${srcdir}/BUILD
	msg "Starting cmake..."
	cmake ${srcdir}/${pkgname}/ \
		-DCMAKE_VERBOSE_MAKEFILE=ON \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DBUILD_ALL=ON \
		-DWITH_XFIXES=ON \
		-DWITH_HAL=OFF \
		-DWITH-PAM=ON \
		-DWITH_ARTS=ON \
		-DWITH_SASL=ON \
		-DWITH_OPENEXR=ON \
		-DWITH_XCOMPOSITE=ON \
		-DWITH_XCURSOR=ON \
		-DWITH_XRANDR=ON \
		-DWITH_XRENDER=ON \
		-DWITH_XDAMAGE=ON \
		-DWITH_SHADOW=ON \
		-DWITH_XDMCP=ON \
		-DWITH_XINERAMA=ON \
		-DWITH_XEXT=ON \
		-DWTH_SUDO_KDESU_BACKEND=ON
	make
}

package() {
	msg "Packaging - $pkgname-$pkgver"
	cd ${srcdir}/BUILD
	make DESTDIR="$pkgdir/" install
	# create/install desktop and update kdmrc and Xsession
	_trinity.desktop
	_kdmdir=/usr/share/config/kdm
	[[ -d ${pkgdir}/${_kdmdir} ]] || install -d -m755 ${pkgdir}/${_kdmdir}
	[[ -f kdmrc ]] && cp -v kdmrc ${pkgdir}/${_kdmdir}
	[[ -f ${srcdir}/Xsession ]] && {
		cp -v ${srcdir}/Xsession ${pkgdir}/${_kdmdir}
		chmod 0755 ${pkgdir}/${_kdmdir}/Xsession
	}
	[[ -d ${pkgdir}/usr/bin ]] || mkdir -p ${pkgdir}/usr/bin
	ln -snf startkde ${pkgdir}/usr/bin/starttrinity
	#
	#	Cleanup
	#
	rm -rf ${pkgdir}/usr/share/apps/Settings
	rm -rf ${pkgdir}/usr/share/templates/.source/emptydir
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/ksysguard/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kate/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kxkb/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kicker/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/quickstart/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/glossary/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/userguide/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/visualdict/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/khelpcenter/faq/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/knetattach/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/konsole/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kfind/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/pci/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/scsi/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/sound/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/usb/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/partitions/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/ioports/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/processor/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/samba/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/memory/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/cdinfo/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/nics/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/interrupts/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/dma/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/xserver/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/pcmcia/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/protocols/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/devices/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kinfocenter/opengl/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kpager/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/klipper/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kdm/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kompmgr/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kdeprint/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kdcop/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/keys/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/crypto/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/filemanager/common
