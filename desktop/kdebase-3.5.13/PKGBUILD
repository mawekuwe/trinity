	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/cookies/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/screensaver/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/kcmtaskbar/common
	rm -f ${pkgdir}/usr/share/doc/kde/HTML/en/kcontrol/colors/common
