post_install() {
	usr/bin/xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	true
}

post_remove() {
	usr/bin/xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	true
}

post_upgrade() {
	usr/bin/xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	true
}
pre_upgrade() {
	usr/bin/xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	true
}

