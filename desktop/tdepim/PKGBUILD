# Maintainer: Baho Utot <baho-utot@columbus.rr.com>
pkgname=kdepim
pkgver=3.5.13
pkgrel=00
arch=('i686' 'x86_64')
url="http://trinity.pearsoncomputing.net"
license=('GPL2')
groups=('trinity')
pkgdesc="Trinity - ${pkgname}"
depends=(gpgme libical desktop-file-utils kdelibs boost)
makedepends=(cmake)
optdepends=( )
options=(!makeflags)
source=( ${pkgname}-${pkgver}.tar.gz)
install=install

mksource() {
	git clone http://scm.trinitydesktop.org/scm/git/${pkgname}
	pushd ${pkgname}
		git submodule init
		git submodule update
		git checkout v3.5.13
	popd
	tar -cvJf ${pkgname}-${pkgver}.tar.xz ${pkgname}/*
	rm -fr ${pkgname}
}

build() {
	mkdir -vp ${srcdir}/BUILD
	cd ${srcdir}/BUILD
	msg "Starting cmake..."
	cmake ${srcdir}/${pkgname}/ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_ALL=ON \
		-DWITH_SASL=ON \
		-DWITH_ARTS=ON \
		-DCMAKE_SKIP_RPATH=ON
	make
}

package() {
	msg "Packaging - $pkgname-$pkgver"
	cd ${srcdir}/BUILD
	make DESTDIR="$pkgdir/" install
	rm -rf ${pkgdir}/usr/share/doc
}
