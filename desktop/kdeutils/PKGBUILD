# Maintainer: Baho Utot <baho-utot@columbus.rr.com>
pkgname=kdeutils
pkgver=3.5.13
pkgrel=00
arch=('i686' 'x86_64')
url="http://trinity.pearsoncomputing.net"
license=('GPL2')
groups=('trinity')
pkgdesc="Trinity - ${pkgname}"
depends=(kdelibs libxtst desktop-file-utils)
makedepends=()
optdepends=()
options=()
install=kdeutils.install
source=(${pkgname}-${pkgver}.tar.gz)

_prefix=/usr
mksource() {
	git clone http://scm.trinitydesktop.org/scm/git/${pkgname}
	pushd ${pkgname}
		git submodule init
		git submodule update
		git checkout v3.5.13
	popd
	tar -cvJf ${pkgname}-${pkgver}.tar.xz ${pkgname}/*
	rm -fr ${pkgname}
}

build() {
	cd ${srcdir}/${pkgname}
	cp -f "/usr/share/aclocal/libtool.m4" "admin/libtool.m4.in"
	cp -f "/usr/share/libtool/config/ltmain.sh" "admin/ltmain.sh"
	make -f "Makefile.cvs"
	./configure prefix=${_prefix} \
		--sysconfdir=/etc \
		--libdir=${_prefix}/lib \
		--mandir=${_prefix}/share/man \
		--docdir=${_prefix}/share/doc/kde \
		--disable-dependency-tracking \
		--enable-closure \
		--disable-rpath
	make
}

package() {
	msg "Packaging - $pkgname-$pkgver"
	cd ${srcdir}/${pkgname}
	install -dm 755 ${pkgdir}${_prefix}/share
	make DESTDIR="$pkgdir/" install
	rm -rf ${pkgdir}${_prefix}/share/doc
}
md5sums=('e2cd6695606c5c91b3380dcc7f1a6a83')
